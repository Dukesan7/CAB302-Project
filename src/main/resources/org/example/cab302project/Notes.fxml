<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/17.0.6"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.cab302project.NotesPageController"
      spacing="10" style="-fx-background-color: #f0f0f0;"
      fillHeight="true">

    <VBox spacing="10" minWidth="200" maxWidth="200"
          style="-fx-background-color: #d3d3d3; -fx-padding: 10;">
        <Button text="Dashboard" fx:id="Dashboard" onAction="#goToPage"
                style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-font-size: 14px;"
                maxWidth="180" minWidth="180" alignment="CENTER" />
        <Button text="Tasks" fx:id="Tasks" onAction="#goToPage"
                style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-font-size: 14px;"
                maxWidth="180" minWidth="180" alignment="CENTER" />
        <Button text="Notes" fx:id="Notes" onAction="#goToPage"
                style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-font-size: 14px;"
                maxWidth="180" minWidth="180" alignment="CENTER" />
        <Button text="Profiles" fx:id="Profiles" onAction="#goToPage"
                style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-font-size: 14px;"
                maxWidth="180" minWidth="180" alignment="CENTER" />
    </VBox>


    <VBox spacing="10" minWidth="200" maxWidth="200"
          style="-fx-background-color: #d3d3d3; -fx-padding: 10;">
        <ListView fx:id="fileList" />
    </VBox>


    <VBox spacing="10" style="-fx-padding: 10;">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Create File" onAction="#createFile" />
            <TextField fx:id="fileNameField" promptText="Enter file name"/>
        </HBox>

        <Button text="Open File" onAction="#openFile" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Rename File" onAction="#renameFile" />
            <TextField fx:id="newFileNameField" promptText="New file name" maxWidth="200"/>
        </HBox>

        <Button text="Delete File" onAction="#deleteFile" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Select Editor" onAction="#chooseEditor" />
            <Label fx:id="editorLabel" text="No editor selected" minWidth="180"/>
        </HBox>
    </VBox>

</HBox>