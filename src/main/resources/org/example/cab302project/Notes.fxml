<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.cab302project.NotesPageController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #d3d3d3; -fx-padding: 10;" prefWidth="200">
            <Button fx:id="Dashboard" text="Dashboard" maxWidth="Infinity" onAction="#goToPage"/>
            <Button fx:id="Tasks" text="Tasks" maxWidth="Infinity" onAction="#goToPage"/>
            <Button fx:id="Notes" text="Notes" maxWidth="Infinity" onAction="#goToPage"/>
            <Button fx:id="Report" text="Reports" maxWidth="Infinity" onAction="#goToPage"/>
            <Button fx:id="Profiles" text="Profiles" maxWidth="Infinity" onAction="#goToPage"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="10">

            <StackPane style="-fx-background-color: #add8e6;" VBox.vgrow="ALWAYS">
                <Label text="notes" />
            </StackPane>

            <HBox spacing="10">
                <StackPane style="-fx-background-color: #90ee90;" HBox.hgrow="ALWAYS"/>
                <StackPane style="-fx-background-color: #ffb6c1;" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
