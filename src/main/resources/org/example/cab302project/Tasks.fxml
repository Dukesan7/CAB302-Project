<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="hBox" prefHeight="549.0" prefWidth="794.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cab302project.Controller.TasksPageController">


   <GridPane nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="476.0" minWidth="10.0" prefWidth="428.0" />
       <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="292.0" minWidth="10.0" prefWidth="166.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints maxHeight="366.0" minHeight="10.0" prefHeight="57.0" vgrow="NEVER" />
       <RowConstraints valignment="TOP" vgrow="ALWAYS" />
     </rowConstraints>
      <children>
         <ChoiceBox fx:id="selectedSubgroup" onAction="#displayTaskList" prefWidth="150.0" GridPane.columnIndex="1" />
         <VBox fx:id="root" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="297.0" spacing="10.0" GridPane.rowIndex="1">
            <padding>
               <Insets top="10.0" />
            </padding>
         </VBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Button fx:id="addTask" mnemonicParsing="false" onAction="#addNewTask" text="Add Task" />
               <TextField fx:id="taskName" promptText="Task Name" />
            </children>
         </HBox>
         </children>
      </GridPane>

   </HBox>
